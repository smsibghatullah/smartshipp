<!--<?xml version="1.0" encoding="" ?>-->
<odoo>
    <data>

        <record id="sale_order_form_inherit_delivery_package" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.ksa</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_order_template_id']" position="after">
                <field name="delivery_package"/>
            </xpath>
        </field>
    </record>

        <record id="view_partner_form_inherit_smarttship" model="ir.ui.view">
        <field name="name">view.partner.form.inherit.smarttship</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page string="Smarttship" name="smarttship" attrs="{'invisible': [('company_type','!=','person')]}">
                    <group>
                        <field name="smarttship_customer" string="Is Smarttship Customer"/>
                        <field name="special_instructions"/>
                        <field name="broker_name"/>
                        <field name="contact_name"/>
                    </group>
                    <group>
                        <field name="secondary_phone"/>
                        <field name="opening_time"/>
                        <field name="closing_time"/>
                        <field name="account_no"/>
                    </group>
                    <group>
                        <field name="primary_contact_position"/>
                        <field name="primary_contact_phone"/>
                        <field name="secondary_contact_name"/>
                        <field name="secondary_contact_position"/>
                    </group>
                    <group>
                        <field name="is_active"/>
                        <field name="notify"/>
                        <field name="phone_extenstion"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='city']" position="after">
                <field name="city_id"></field>
            </xpath>
        </field>
    </record>






         <record id="smarttship_sync_wizard_view" model="ir.ui.view">
            <field name="name">smarttship.sync.wizard.viewss</field>
            <field name="model">smarttship.sync</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="sync_city"/>
                        <field name="sync_state"/>
                        <field name="sync_customer"/>
                        <field name="sync_package"/>
                    </group>
                    <footer>
                        <button name="sync_records" string="Done" class="btn-secondary" type="object"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="smarttship_sync_wizard_view_action" model="ir.actions.act_window">
            <field name="name">Smarttship Sync</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">smarttship.sync</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="smarttship_sync_wizard_view"/>
        </record>


        <!-- Top menu item -->
        <menuitem id="smarttship_sync_main_menu" name="Smarttship Sync" action="smarttship_sync_wizard_view_action"/>
















    </data>
</odoo>